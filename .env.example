# Environment Variables for yamly
# Copy this file to .env and update with your values
# Never commit .env to git (it's in .gitignore)

# ============================================================================
# API Server Configuration
# ============================================================================

# Port to bind the server to (Railway sets this automatically)
# PORT=8000

# Host to bind to (required for Railway, do not change)
# HOST=0.0.0.0

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed CORS origins
# Empty = no CORS (most secure)
# For local development: http://localhost:3000
# For production: https://yamly.thepitz.studio
# CORS_ORIGINS=http://localhost:3000,https://yamly.thepitz.studio

# Allow credentials in CORS requests
# CORS_ALLOW_CREDENTIALS=true

# Comma-separated list of allowed HTTP methods (or * for all)
# CORS_ALLOW_METHODS=*

# Comma-separated list of allowed headers (or * for all)
# CORS_ALLOW_HEADERS=*

# ============================================================================
# Application Metadata
# ============================================================================

# Application name
# APP_NAME=yamly API

# Application version
# APP_VERSION=0.1.0

# ============================================================================
# API Client Configuration
# ============================================================================

# Base URL for the yamly API
# For local development: http://localhost:8000
# For production: https://api-yamly.thepitz.studio
YAMLY_API_URL=https://api-yamly.thepitz.studio

# Optional API key for authentication (if implemented in the future)
# YAMLY_API_KEY=

# Request timeout in seconds
# YAMLY_API_TIMEOUT=30

# ============================================================================
# UI Configuration (Next.js)
# ============================================================================

# API URL for the Railway backend (used by Next.js UI)
# For local development: http://localhost:8000
# For production: https://api-yamly.thepitz.studio
# NEXT_PUBLIC_API_URL=https://api-yamly.thepitz.studio

# ============================================================================
# Railway Deployment (GitHub Actions)
# ============================================================================

# Railway deployment domain (for health check in CI/CD)
# Used by .github/workflows/deploy.yml
# Set this in GitHub repository secrets, not in .env
# RAILWAY_DOMAIN=api-yamly.thepitz.studio
